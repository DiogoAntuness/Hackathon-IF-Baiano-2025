<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/primary_orange"
            android:layout_alignParentStart="true"
            android:contentDescription="Voltar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre o Projeto"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_raizafro"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                app:tint="@color/primary_orange"/>
            <TextView
                android:text="A ORIGEM"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:text="Hackathon LCC – I° EDIÇÃO"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#D84315"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:text="O RaizAfro foi idealizado e desenvolvido durante a Hackathon 2025 do IF Baiano – Campus Senhor do Bonfim."
                        android:textSize="15sp"
                        android:textColor="#4E342E"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="O PROPÓSITO"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="RaizAfro"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#D84315"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="A cultura afro-brasileira é a base da nossa identidade, mas muitas vezes passa despercebida no dia a dia.\n\nO RaizAfro nasce para transformar hábitos comuns em descobertas, conectando você à história através de um quiz interativo e educativo. Nosso objetivo é combater o apagamento histórico e valorizar a representatividade negra na construção da sociedade brasileira."
                        android:textSize="15sp"
                        android:textColor="#4E342E"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="QUEM FAZ"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="Desenvolvedores"
                        android:textStyle="bold"
                        android:textColor="#D84315"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="• Diogo Alves Antunes\n• João Lucas Ribeiro de Matos\n• Jonatas Mota da Silva Assunção\n• Luiz Gustavo da Silva Araújo"
                        android:textColor="#3E2723"
                        android:textSize="15sp"
                        android:lineSpacingExtra="6dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEBE9"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:text="Orientação"
                        android:textStyle="bold"
                        android:textColor="#D84315"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="• Diêgo Pereira da Conceição"
                        android:textColor="#3E2723"
                        android:textSize="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="REALIZAÇÃO"
                android:textColor="@color/primary_orange"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo_lcc"
                        android:layout_marginEnd="16dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="IF Baiano"
                            android:textStyle="bold"
                            android:textColor="#D84315"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Campus Senhor do Bonfim\nLicenciatura em Ciências da Computação\nHackathon LCC – I° EDIÇÃO (2025)"
                            android:textColor="#4E342E"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Versão 1.0.0"
                android:gravity="center"
                android:textColor="#8D6E63"
                android:textSize="12sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>