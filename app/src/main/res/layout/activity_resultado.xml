<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:padding="32dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:text="Resultado Final"
            android:textColor="@color/primary_orange" />

        <TextView
            android:id="@+id/txtScore"
            android:text="Seu Índice de Vivência Afro-Brasileira é x%"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_branco"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/txtResumo"
                android:text="Resumo aqui..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#3E2723"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtMensagemFinal"
                android:text="Mensagem final..."
                android:textSize="14sp"
                android:textColor="#5D4037"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:text="Voltar ao Início"
            android:onClick="finish"
            android:textColor="@color/bg_dark"
            android:textStyle="bold"
            android:background="@drawable/bg_botao_laranja"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>
    </LinearLayout>

</ScrollView>