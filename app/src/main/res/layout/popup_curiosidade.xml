<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_card_branco">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lampada_de_ideia"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ficar Ligado"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/primary_orange"/>

    <TextView
        android:id="@+id/txtCuriosidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Texto da curiosidade..."
        android:textSize="16sp"
        android:textColor="#3E2723"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continuar"
        android:textStyle="bold"
        android:textColor="@color/bg_dark"
        android:background="@drawable/bg_botao_laranja"/>

</LinearLayout>